datasource db {
  provider = "postgresql"
  url = env("POSTGRES_COLLAB")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  id     Int @id @default(autoincrement())
  userId1  String @map(name: "user_id_1")
  userId2  String @map(name: "user_id_2")// relation
  name   String @unique // Random slug generated at app level
  isOpen Boolean @default(false) @map(name: "is_open")
  attemptId String? @map(name: "attempt_id") // relation
  createdAt DateTime @default(now()) @map(name: "created_at")
}